<Alloy>
	<Window id="loginForm" class="login">
		<ScrollView id="loginView" class="vertical">
			<View class="logoView">
				<ImageView class="logoImage" />
			</View>
			<Label id="manageContact" class="logoTitle"/>
			<View class="horizontal inputGroup">
				<View id="inputBar" class="inputBar"/>
				<View class="vertical">
					<TextField id="inputUsername" class="input" />
					<TextField id="inputPassword" class="input"/>
				</View>
			</View>
			<Button id="buttonLogin" class="primaryButton" onClick="actionLogin"/>
			
			<ActivityIndicator id="activityIndicator" />
			
			<View class="horizontal">
				<Label id="notMember" class="medium"/>
				<Label id="signUp" class="medium" onClick="showSignup"/>
			</View>
			
			<View class="horizontal">
				<Label id="forgetPassword" class="medium" onClick="forgetPasswordAction">
				<Label id="helpCenter" class="medium"/>
			</View>
		</ScrollView>
	</Window>
</Alloy>
